<div class="form-group">
  <label for="page">Display on this page</label>
  <select required id="page" name="page" class="custom-select">
    <option value="home" <%= article.page == 'home' ? 'selected' : '' %>>Home</option>
    <option value="about" <%= article.page == 'about' ? 'selected' : '' %>>About Real</option>
    <option value="commission" <%= article.page == 'commission' ? 'selected' : '' %>>Commission Plan</option>
    <option value="revenue" <%= article.page == 'revenue' ? 'selected' : '' %>>Revenue Share</option>
    <option value="equity" <%= article.page == 'equity' ? 'selected' : '' %>>Equity Ownership</option>
    <option value="culture" <%= article.page == 'culture' ? 'selected' : '' %>>Culture</option>
  </select>
</div>
<div class="form-group">
  <label for="title">Video Title</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
  <label for="description">Video Link</label>
  <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
  <label for="markdown">Video Description</label>
  <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/add" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>

